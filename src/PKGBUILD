pkgname=tuskwm
pkgver=0.1
pkgrel=1
pkgdesc="modern wayland tiling window manager"
arch=(x86_64)
url="https://github.com/raidigit/tuskwm"
license=(MIT)
depends=(wlroots wayland xkbcommon)
makedepends=(meson ninja)

build() {
    gcc main.c -o tuskwm \
        $(pkg-config --cflags wlroots wayland-server xkbcommon) \
        $(pkg-config --libs wlroots wayland-server xkbcommon) \
        -Wall -Wextra
}

package() {
    install -Dm755 tuskwm "$pkgdir/usr/bin/tuskwm"
}
