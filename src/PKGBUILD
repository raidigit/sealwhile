pkgname=tuskwm
pkgver=0.1
pkgrel=1
pkgdesc="modern wayland tiling window manager"
arch=(x86_64)
url="https://github.com/raidigit/tuskwm"
license=(MIT)
depends=(wlroots wayland xkbcommon)
makedepends=(meson ninja)

build() {
    meson setup builddir --prefix=/usr
    ninja -C builddir
}

package() {
    DESTDIR="$pkgdir" ninja -C builddir install
}
